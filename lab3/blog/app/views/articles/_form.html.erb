<%= form_with model: @article, local: true do |form| %>

  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class:"form-control", placeholder:"Title", value: @article.title %>
    <% if @article.errors[:title].any? %>
      <div class="">
          <% @article.errors[:title].each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
  </div>
 
 <div class="form-group">
    <%= form.label "body" %><br>
    <%= form.text_area :text, class:"form-control", placeholder:"One day, ..", value: @article.text %>
     <% if @article.errors[:text].any? %>
      <div class="">
          <% @article.errors[:text].each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
  </div>
 
  <div class="form-group">
    <%= form.submit nil,  class: "btn btn-primary"%>
  </div>
<% end %>